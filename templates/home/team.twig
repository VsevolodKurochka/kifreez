<section class="section home-team">
	<div class="container">
		{{
			macros.sectionTitle(
				'home-team__header',
				{
					'type': 3,
					'class': 'title-lg home-team__title',
					'text': post.get_field('team_title')
				},
				{
					'type': 4,
					'class': 'title-sm home-team__subtitle',
					'text': post.get_field('team_subtitle')
				}
			)
		}}
		<div class="home-team__carousel owl-carousel" id="team-carousel">
			{% for person in post.get_field('team_persons') %}
				<div class="person">
					<div class="person__header">
						<img src="{{person.image}}" alt="{{person.name}} - {{person.position}}" class="person__image">
						<div class="person__description">{{person.description}}</div>
					</div>
					<p class="person__title">{{person.name}}</p>
					<p class="person__position">{{person.position}}</p>
				</div>
			{% endfor %}
		</div>
	</div>
</section>